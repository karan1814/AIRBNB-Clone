<% layout("../layouts/boilerplate") %>
<body class="">
   <div class="row">
      <div class="col-8 offset-2 mt-5">
        <h1><%= listing.title%></h1>
        <div class="card mb-3 card-listing">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-body mt-5">
            <p class="card-text">Hosted by <i><%= listing.owner.username %></i></p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">
              &#8377;
              <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /Night
            </p>
            <p class="card-text"><small class="text-body-secondary">
              <%= listing.location %>, <%= listing.country %>
            </small></p>
          </div>
        </div>
        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="btns mb-5">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark" >Edit</a>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-light offset-4">Delete</button>
            </form>
          </div>
        <% } %> 
        <hr>
        <% if(currUser){ %>
          <!-- <div class="col-8 offset-2 mb-3"> -->
            <H4>Leave a Review</H4>
            <form method="post" action="/listings/<%=listing.id%>/review" class="needs-validation" novalidate>
              <label for="radio">Rate This here</label>
              <fieldset class="starability-coinFlip">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
              <textarea name="review[Comment]" id="Comment" placeholder="your valuable Feedback" class="form-control" cols="10" rows="8" required></textarea>
              <br>
              <button class="btn btn-dark">Submit</button>
            </form>
            <hr>
        <% } %>
        <h4>Reviews</h4>
        <div class="row">
          <% for(review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                  <p class="starability-result card-text" data-rating="<%=review.rating%>">
                    Rated: 3 stars
                  </p>
                  <p class="card-text"><%=review.Comment%>.</p>
                <form action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" method="post">
                  <button class="btn btn-dark mb-3">DELETE</button>
                </form>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
</body>
